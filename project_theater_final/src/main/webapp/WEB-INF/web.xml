<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- Sevlet name and class -->
    <servlet>
        <servlet-name>createPestacle</servlet-name>
        <servlet-class>theater_servlet.createPestacle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>restrictiveAccess</servlet-name>
        <servlet-class>theater_servlet.restrictiveAccess</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createRoomManager</servlet-name>
        <servlet-class>theater_servlet.roomManagerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>connectRoomManager</servlet-name>
        <servlet-class>theater_servlet.connectRoomManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listSpectacleServlet</servlet-name>
        <servlet-class>theater_servlet.listSpectacleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listCategoriesServlet</servlet-name>
        <servlet-class>theater_servlet.listCategoriesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listSpectacleCategoryServlet</servlet-name>
        <servlet-class>theater_servlet.listSpectacleCategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buyTicketSpectacle</servlet-name>
        <servlet-class>theater_servlet.buyTicketSpectacle</servlet-class>
    </servlet>


    <!-- Sevlet mapping (route) -->
    <servlet-mapping>
        <servlet-name>createPestacle</servlet-name>
        <url-pattern>/createPestacle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>restrictiveAccess</servlet-name>
        <url-pattern>/restrictiveAccess</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createRoomManager</servlet-name>
        <url-pattern>/createRoomManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>connectRoomManager</servlet-name>
        <url-pattern>/connexionRoomManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listSpectacleServlet</servlet-name>
        <url-pattern>/listSpectacle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listCategoriesServlet</servlet-name>
        <url-pattern>/listCategories</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listSpectacleCategoryServlet</servlet-name>
        <url-pattern>/listSpectacleByCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buyTicketSpectacle</servlet-name>
        <url-pattern>/buy</url-pattern>
    </servlet-mapping>
</web-app>